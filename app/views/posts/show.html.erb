<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>
<p>
  <b>Comments:</b></br>
  <% @post.comments.each do |comment| %>
    <%= link_to comment.created_at, comment %></br>
    <%= comment.body %></br>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
